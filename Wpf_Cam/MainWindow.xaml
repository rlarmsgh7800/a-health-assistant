<Window x:Class="Wpf_Cam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Cam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing" Background="#FF131418" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Image x:Name="image"  HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" OpacityMask="#FF766363"/>
        <Button x:Name="button" Content="Start" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Bottom" Width="105" Height="45" Click="button_Click_1"/>
        <ComboBox x:Name="videoCaptureDeviceComboBox"
                Margin="255,360,317,9"
                Width="200"
                Height="30"
                VerticalContentAlignment="Center"
                DisplayMemberPath="Name" />

    </Grid>
</Window>
