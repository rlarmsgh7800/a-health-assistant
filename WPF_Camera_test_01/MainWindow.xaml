<Window x:Class="WPF_Camera_test_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Camera_test_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded_1" WindowStyle="None" Background="#FF1F1D1D" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" AllowsTransparency="True">
    <Grid Background="#FF131212" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom"  >
        <Image x:Name="image" Margin="10"  OpacityMask="#FF0E0D0D" HorizontalAlignment="Center" VerticalAlignment="Center"  RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="button" Content="Start" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="147" Height="42" Click="button_Click_1"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Top" Width="50" Height="20" Click="btnExit_Click"/>
    </Grid>
</Window>
